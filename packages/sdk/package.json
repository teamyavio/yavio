{
  "name": "@yavio/sdk",
  "version": "0.1.2",
  "description": "Yavio SDK for instrumenting MCP servers with analytics, session tracking, and a React widget",
  "type": "module",
  "license": "MIT",
  "author": "Yavio GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/teamyavio/yavio.git",
    "directory": "packages/sdk"
  },
  "homepage": "https://yavio.ai",
  "bugs": "https://github.com/teamyavio/yavio/issues",
  "keywords": [
    "yavio",
    "mcp",
    "model-context-protocol",
    "analytics",
    "instrumentation",
    "observability",
    "ai",
    "llm"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "files": ["dist", "LICENSE", "README.md"],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js",
      "require": "./dist/react.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "test": "vitest run"
  },
  "dependencies": {
    "nanoid": "^5.1.5"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": ">=1.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "@modelcontextprotocol/sdk": {
      "optional": false
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@yavio/shared": "workspace:*",
    "@testing-library/react": "^16.3.2",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.10.0",
    "@types/react": "^19.2.14",
    "jsdom": "^28.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.7.3",
    "zod": "^4.3.6"
  }
}
